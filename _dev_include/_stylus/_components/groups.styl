
.groups
  margin 75px 0 60px

.groups__wrap
  display flex

.groups__item
  width 12.95%
  text-decoration none
  &:not(:last-child)
    margin-right 1.55%

.groups__hash-tag
  text-decoration none
  color black
  strong
    font-family fBold

.groups__note
  margin 10px 0 0
  font-family fLight

.groups__item-icon
	width 19px
	height 19px

@media (max-width: desktop)
  .groups
    margin 40px 0 30px

@media (max-width: tablet)
  .groups__wrap
    display none
  .groups
    margin 40px 0 0

@media (max-width: mobile)
  .groups
    margin-top 25px

@media (max-width: small)
  .groups
    margin-top 15px