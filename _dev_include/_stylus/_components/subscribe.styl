
.subscribe
  text-align center
  background-color #fff6d7
  padding 40px 0 60px

.subscribe__caption
  font-size 30px
  font-family fRegular
  color black
  margin 0

.subscribe__note
  color black
  font-size 18px
  margin 0 0 22px

.subscribe__field-wrap
  padding 10px 10px 10px 20px
  width 590px
  max-width 100%
  background-color white
  margin 0 auto

.subscribe__field
  border 0
  outline 0
  height 41px
  width 395px
  max-width 100%

.subscribe__field,
.subscribe__field::placeholder
  color baseColor
  font-size 18px

.subscribe__btn
  background-color black
  color white
  font-size 14px
  font-family fUltraLight
  height 41px
  padding 5px 23px
  text-transform uppercase
  letter-spacing .05em
  &:hover
    background-color baseColorDark

@media all and (min-width: tablet)
  .subscribe
    background-image url('../_img/subscribe.jpg')
    background-position right top
    background-repeat no-repeat

@media (max-width: tablet)
  .subscribe
    padding 30px 0 45px
  .subscribe__caption
    font-size 26px
  .subscribe__note
    font-size 16px
  .subscribe__field-wrap
    padding 5px 5px 5px 5px

@media (max-width: mobile)
  .subscribe
    padding 20px 0 25px
  .subscribe__caption
    font-size 20px
    width 80%
    margin 0 auto
  .subscribe__field-wrap
    background none
    padding 0
  .subscribe__field
    padding 5px 15px
  .subscribe__field,
  .subscribe__btn
    width 70%
    margin 10px auto
    display block
  .subscribe__field,
  .subscribe__field::-webkit-input-placeholder
    font-size 14px
  .subscribe__note
    margin 5px 0 15px

@media (max-width: small)
  .subscribe
    padding 15px 0 20px
  .subscribe__caption
    font-size 16px
  .subscribe__note
    font-size 12px
  .subscribe__field,
  .subscribe__field::-webkit-input-placeholder
    font-size 12px
  .subscribe__btn
    height 37px
    font-size 10px