
.slider
  margin 35px 0 75px
  position relative

.slider__item
  height 340px
  width 275px
  text-align center
  .rub
    color black
    font-size 18px

.slider-item__inner
  display block
  text-decoration none
  width 100%
  height 100%
  border 1px solid transparent
  &:hover
    border-color #e3e3e3

.slider-item__image
  display table
  width 100%
  height 73%
  img
    max-height 100%

.slider-item__caption
  font-size 18px
  font-family fRegular
  display block
  margin 5px 0
  color black

.slider-item__price
  font-size 24px
  font-family fRegular
  color black

.slider__arrow
  position absolute
  top 38%
  &:not(.swiper-button-disabled)
    cursor pointer

.slider__arrow--prev
  left -42px

.slider__arrow--next
  right -42px

.slider__pager
  display block
  text-align center
  .swiper-pagination-bullet
    display inline-block
    width 7px
    height 7px
    border-radius 5px
    background-color #e3e3e3
    margin 0 7px
  .swiper-pagination-bullet-active
    background-color #949494

@media (max-width: desktop)
  .slider
    margin-bottom 40px

  .slider__item
    height 310px

  .slider-item__image
    height 60%

@media (max-width: tablet)
  .slider
    margin 25px 0 40px

  .slider__item
    height 250px

  .slider-item__caption
    font-size 16px

  .slider-item__price
    font-size 20px

@media (max-width: small)
  .slider
    margin 15px 0 35px

  .slider__item
    height 180px

  .slider-item__image
    height 50%

  .slider-item__caption
    font-size 14px

  .slider-item__price
    font-size 16px

@media (min-width: tablet)
  .slider__pager
    display none